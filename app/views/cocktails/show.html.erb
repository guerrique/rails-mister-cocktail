
<div class="container">
  <div class="row">
    <div class= "page-background">
      <div class="col-12">
        <div class="title">
          <h1> <%= link_to 'Drink yourself to death',  root_path %></h1>
          <h4>because why not</h4>
        </div>
      </div>


      <div class="row justify-content-center">


        <div class="col-8">
          <div class="card-cocktail">

            <div>
              <% if @cocktail.photo.present? %>
              <%= cl_image_tag @cocktail.photo, width: 240, height: 300, crop: :fill %>
              <% else %>
              <%= image_tag 'default.jpg' %>
              <% end %>
            </div>
            <div class= "card-cocktail-text">
              <h2><%= @cocktail.name %></h2>
              <p>
                <ul>
                  <% @cocktail.doses.each do |dose| %>
                  <li><%= dose.ingredient.name%> : <%= dose.description %> <%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: "REALLY !?!" } %></li>
                  <% end %>
                </ul>
              </p>
              <div class="row">
                <%= link_to'add a dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-cocktail' %>
                <%= link_to 'back to cocktails', cocktails_path, class: 'btn btn-cocktail' %>
              </div>
            </div>

          </div>


        </div>
      </div>




    </div>
  </div>
</div>

